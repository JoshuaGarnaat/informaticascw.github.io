// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/universal
{
	"name": "Static webhosting with hugo",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/universal:2-linux",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "sudo snap install hugo",

	// Use 'postStartCommand' to run commands after the container is started.
	"postStartCommand": "nohup bash -c 'hugo server --disableFastRender > .nohup_hugoserver.out 2>&1 & rm nohup.out &'", // start webserver without cache on port 8080 nocache and leave it running in background
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
			8080
	],
	"portsAttributes": {
		"8080": {
			"label": "Hugoserver",
			"onAutoForward": "openPreview"
		}
	}

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
